{
  "manifest_version": 3,
  "name": "BECOME PRISM",
  "version": "1.0.0",
  "description": "The Sentient Eye for your Digital Brain.",
  "icons": {
    "16": "assets/eye_logo.png",
    "48": "assets/eye_logo.png",
    "128": "assets/eye_logo.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "assets/eye_logo.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"]
    }
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space"
      },
      "description": "Open BECOME PRISM"
    }
  },
  "permissions": ["activeTab", "scripting", "storage", "downloads", "clipboardWrite", "alarms", "tabs"]
}
